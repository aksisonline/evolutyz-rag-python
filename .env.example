QDRANT_API=
QDRANT_URL=
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DENSE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
COLBERT_EMBEDDING_MODEL=colbert-ir/colbertv2.0
SPARSE_EMBEDDING_MODEL=Qdrant/bm25
GEMINI_API_KEY=

# Ingestion batching (CSV & PDF)
INGEST_BATCH_SIZE=64
PDF_BATCH_SIZE=64

# Static token chunking defaults (ColBERT best practices)
CSV_CHUNK_TOKENS=180
CSV_CHUNK_MAX_TOKENS=300
CSV_CHUNK_OVERLAP_TOKENS=0
CSV_CHUNK_HARD_MAX_TOKENS=512
PDF_CHUNK_TOKENS=180
PDF_CHUNK_MAX_TOKENS=300
PDF_CHUNK_OVERLAP_TOKENS=0
PDF_CHUNK_HARD_MAX_TOKENS=512

# Enable dynamic segmentation (set variable to any value to activate)
# CSV_DYNAMIC_SEGMENT=1
# PDF_DYNAMIC_SEGMENT=1

# Dynamic segmentation tuning (used only when *_DYNAMIC_SEGMENT is set)
CSV_DYNAMIC_TARGET_SEGMENTS=12
CSV_DYNAMIC_MIN_TOKENS=120
CSV_DYNAMIC_MAX_TOKENS=300
PDF_DYNAMIC_TARGET_SEGMENTS=12
PDF_DYNAMIC_MIN_TOKENS=120
PDF_DYNAMIC_MAX_TOKENS=300

# Qdrant upsert safety controls
QDRANT_MAX_POINTS_PER_UPSERT=16
QDRANT_UPSERT_RETRIES=3
QDRANT_UPSERT_BACKOFF_BASE=0.5
# QDRANT_DISABLE_COLBERT=1  # Uncomment to disable ColBERT vector dimension